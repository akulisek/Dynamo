perl_require "Data/UUID.pm";
	perl_set $request_uuid 'sub {
	   $ug = new Data::UUID;
	   return $ug->create_str();
	}';


upstream app {
	least_conn;
    {{range service  "rails-image-3000"}}server {{.Address}}:{{.Port}} max_fails=3 fail_timeout=60 weight=1;
	{{else}}server 127.0.0.1:65535; # force a 502{{end}}
}


server {
  listen 80;

  location /health/ {
		return 200;
	}

   location / {
		proxy_pass http://app;
		proxy_set_header correlation_id $request_uuid;
	}
}



